{% extends "boilerplate_v2.njk" %}
{% set page_id = "services-page"%}
{% set page_stylesheet = "services" %}

{% set icons = [
    "html",
    "css",
    "javascript",
    "sass",
    "amp",
    "nunjucks",
    "python",
    "node",
    "mongo",
    "sketch",
    "photoshop",
    "lightroom"
  ]
%}

{% set row_1 = icons.slice(0, (icons.length / 2)) %}
{% set row_2 = icons.slice((icons.length/2) + 1) %}

{% block banner %}
{# Banner #}
{# <div class="banner d-flex" id="jumbo-services">
  <div class="banner-text-container flex-item">
