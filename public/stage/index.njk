{% extends "boilerplate_v2.njk" %}
{% set page_id = "home-page" %}
{% set page_stylesheet = "index" %}

{% block banner %}
  <section class="banner d-flex" id="jumbo-home">
    <div class="banner-text-container flex-item">
      <h1 class="righteous headline">Hi I'm Spencer</h1>
      <h4 class="raleway subhead">I write code, run projects, and <span class="nowrap">take cool photos </span></h4>
      <span><a href="#scroll" class="scrollTo icon-link"><i class="fas fa-angle-down icon-lg"></i></a></span>
    </div>
  </section>
{% endblock %}

{% block content %}
{# 3 content boxes #}
  <section class="content-cards main-content" id="scroll">
    <img src="img/wave-divider-dark.svg" class="wave-divider top">

    {# Who I am #}
    <div class="d-flex content-block" id="content-block-1">
      <div class="column left copy-container">
        <h4 class="righteous headline copy">Who I Am</h4>
        <p class="body copy">
          Get to know <i>me</i>, not just my work&mdash;how I got here, where I want to go, what I love doing and why I love doing&nbsp;it.
        </p>
        <div class="btn-container">
          <a href="./about.html"><button class="btn righteous">Read more</button></a>
        </div>
      </div>
      <div class="column right img-container">
        <a href="./about">
          <img src="img/me-fall-color.jpg">
        </a>
      </div>
    </div>
    
    {# What I do #}
    <div class="d-flex content-block stack-reverse" id="content-block-2">
      <div class="column left img-container">
        <a href="./about.html">
          <img src="img/hustle.jpg">
        </a>
      </div>
      <div class="column right copy-container">
        <h4 class="righteous headline copy">What I do</h4>
        <p class="body copy">
          My primary professional focus is in Web&nbsp;Development with a background in Project&nbsp;Management. I also pursue photography semi-professionally, taking on occasional gigs as my schedule&nbsp;allows.
        </p>
        <div class="btn-container">
          <a href="./services"><button class="btn righteous">See my work</button></a>
        </div>
      </div>
    </div>

    {# Contact #}
    <div class="d-flex content-block" id="content-block-3">
      <div class="column left copy-container">
        <h4 class="righteous headline copy">How To Connect</h4>
        <p class="body copy">
          Interested in collaborating? Let's chat and discover what we can accomplish. 
        </p>
        <div class="btn-container">
          <a href="./contact"><button class="btn righteous">Get in touch</button></a>
        </div>
      </div>
      <div class="column right img-container">
        <a href="./about">
          <img src="img/notepad.jpg">
        </a>
      </div>
    </div>
    <img src="img/wave-divider-dark.svg" class="wave-divider bottom">
  </section>
{% endblock %}
